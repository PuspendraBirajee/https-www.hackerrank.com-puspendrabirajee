# include<stdio.h>
int main()
{
    int n,c=1;
    scanf("%d",&n);
    int a[n];
    for(int i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
    int max=0;
    for(int i=0; i<n; i++)
    {
        if(max<a[i])
        {
            max=a[i];
        }
        else if(max==a[i])
        {
            c++;
        }
    }
    printf("%d",c);
}
