# include<stdio.h>
int main()
{
    int n;
    float c=0,count=0,p=0;
    scanf("%d",&n);
    int a[n];
    for(int i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
    for(int i=0; i<n; i++)
    {
        if(a[i]>0)
        {
            c++;
        }
        else if(a[i]<0)
        {
            count++;
        }
        else if(a[i]==0)
        {
            p++;
        }
    }
        printf("%f\n",c/n);
         printf("%f\n",count/n);
          printf("%f\n",p/n);
    
}
